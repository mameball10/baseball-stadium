<ul class="list-unstyled">
  <% messages.each do |message| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(message.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= message.user.name %> <span class="text-muted">posted at <%= message.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= message.content %></p>
        </div>
        <div>
          <% if current_user == message.user %>
            <%= link_to "削除", message, method: :delete, data: { confirm: "このメッセージを削除しますか?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate messages %>
</ul>